<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.3"
    android:background="@drawable/header"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="@dimen/layout_margin_default"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/userimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/avatar"
            app:siBorderColor="@color/purple_100"
            app:siBorderWidth="4dp"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userimage"
            android:layout_weight="1"
            android:padding="@dimen/layout_padding_default"
            android:text="@string/name"
            android:textSize="@dimen/header_font_size"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/phoneno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_default"
            android:layout_below="@+id/name"
            android:paddingLeft="@dimen/layout_padding_default"
            android:text="@string/phoneno"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/header_font_size"/>

    </RelativeLayout>




</LinearLayout>