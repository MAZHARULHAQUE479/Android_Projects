<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_height="400dp">

    <EditText
        android:textAlignment="center"
        android:textColorHint="@color/text_color_white"
        android:hint="Enter New Card Id"
        android:layout_margin="10dp"
        android:background="@color/red"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/update_cardid" />

    <EditText
        android:textAlignment="center"

        android:textColorHint="@color/text_color_white"
        android:inputType="number"
        android:layout_margin="10dp"
        android:hint="Enter New Card No"
        android:background="@color/red"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/update_cardno"
        android:layout_gravity="center_horizontal" />

    <!--<Button-->
    <!--android:background="@color/colorPrimaryDark"-->
    <!--style="?android:attr/buttonStyleSmall"-->
    <!--android:layout_width="288dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="@string/Ok"-->
    <!--android:id="@+id/update"-->
    <!--android:layout_gravity="right" />-->
    <EditText
        android:textAlignment="center"

        android:textColorHint="@color/text_color_white"
        android:layout_margin="10dp"
        android:hint="Enter New Card Type"
        android:background="@color/red"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/update_cardtype"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

